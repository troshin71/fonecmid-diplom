	Запрос.УстановитьПараметр("ВидОклад", ПланыВидовРасчета.ВКМ_ОсновныеНачисления.Оклад);
	Запрос.УстановитьПараметр("ВидПроцент", ПланыВидовРасчета.ВКМ_ДополнительныеНачисления.Процент);
	РезультатЗапроса = Запрос.Выполнить();
	Выборка = РезультатЗапроса.Выбрать();
	
	ТаблицаДанных = Новый ТаблицаЗначений;
	ТаблицаДанных.Колонки.Добавить("НомерСтроки");
	ТаблицаДанных.Колонки.Добавить("ДатаНачала");
	ТаблицаДанных.Колонки.Добавить("ДатаОкончания");
	ТаблицаДанных.Колонки.Добавить("РезультатОклад");
	ТаблицаДанных.Колонки.Добавить("ОтработаноДней");
	ТаблицаДанных.Колонки.Добавить("РезультатПроцент");
	
	Пока Выборка.Следующий() Цикл
		НоваяСтрока = ТаблицаДанных.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, Выборка);
	КонецЦикла;
	
	ТаблицаДанных.Свернуть("НомерСтроки, ДатаНачала, ДатаОкончания", "РезультатОклад, ОтработаноДней, РезультатПроцент");
	
	Для Каждого СтрокаИтог Из ТаблицаДанных Цикл
		
		СуммаБазы = СтрокаИтог.РезультатОклад + СтрокаИтог.РезультатПроцент;
		ДниБазы = СтрокаИтог.ОтработаноДней;
		
		Если Не ЗначениеЗаполнено(СтрокаИтог.ДатаНачала) Или Не ЗначениеЗаполнено(СтрокаИтог.ДатаОкончания) Тогда
			Продолжить;
		КонецЕсли;
		
		ДнейОтпуска = (СтрокаИтог.ДатаОкончания - СтрокаИтог.ДатаНачала) / 86400 + 1;
		
		СреднийЗаработок = 0;
		Если ДниБазы > 0 Тогда
			СреднийЗаработок = СуммаБазы / ДниБазы;
		КонецЕсли;
		
		СуммаНачисления = СреднийЗаработок * ДнейОтпуска;
		
		Движение = Движения.ВКМ_ОсновныеНачисления[СтрокаИтог.НомерСтроки - 1];
		Движение.ВКМ_Результат = СуммаНачисления;
		Движение.ВКМ_ОтработаноДней = ДнейОтпуска;
		
	КонецЦикла;
	
